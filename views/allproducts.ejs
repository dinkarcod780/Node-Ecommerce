<%- include("partials/header")%>
<%- include("partials/nav")%>



<script src="https://cdn.tailwindcss.com"></script>
<h1 class="text-center text-3xl mt-8">All Product</h1>

<div class="flex  h-[90vh] w-[98%] mt-[2%]   ml-3 gap-1">

  <%products.forEach(card=>{%>
  <div class="product h-[80vh] w-fit border-2  ">
   
   <div class="img h-[54vh] w-[90%] mt-[9%]   m-auto  ">
     <a href="/cartbuy/<%=card._id%>"><img  class=" h-[54vh] w-[90%] bg-cover bg-center bg-no-repeat object-contain " src="/images/<%=card.productImag%>" alt=""> </a>
 </div>
 <div class="flex gap-5 ml-3 mt-3 ">
 <div class="">
 <h1 class=" text-[1.3vw] hover:text-orange-700 mt-2 "><%=card.name%></h1>
 <h2 class=" text-[1.3vw] hover:text-orange-700 mt-2"><%=card.description%></h2>
 </div>
 <div>
 <h1 class="text-center text-xl hover:text-orange-700 ">$<%=card.price%></h1>
 <h2 class="text-center text-xl hover:text-orange-700 "><%=card.category%></h2>
 
 </div>
 <div class="mt-7"><a class="py-2 px-3 bg-orange-800 text-[1.2vw] hover:bg-orange-600 text-white rounded-[3px] " href="/addcart/<%=card._id%>">Add to Cart</a></div>
 </div>
  </div>
 <%})%>

 </div>

 

